#!/usr/bin/env zsh

executable="$@"

if [ "$executable" = "" ] ; then
  echo expected required argument \"executable\"
  exit 1
fi

if [ ! -d world ] && find $HOME/backups -name '*.tar.gz' ; then
  latest="$(ls -t $HOME/backups/*.tar.gz | head -1)"
  if [ "$latest" != "" ] ; then
    tar xf $latest
  fi
fi


if [ ! -f eula.txt ] ; then
  eval "$executable"

  if grep "You need to agree to the EULA in order to run the server." logs/latest.log > /dev/null ; then
    sed -i 's/eula=false/eula=true/' eula.txt
  else
    echo expected eula notification to be present in latest log
    exit 1
  fi
fi

if [ ! -f config/paper-global.yml ] ; then
  eval "$executable" &

  PID=$!

  while ! nc -z localhost 25575 ; do
    sleep 1
  done

  echo -n stop\\n | /bin/rcon-cli --password password

  wait $PID

  yq -y \
    --arg secret "$(cat /home/minecraft/secrets/forwarding.secret)" \
    '.proxies.velocity.enabled=true|.proxies.velocity.secret=$secret' \
    < config/paper-global.yml \
    > config/paper-global.yml.tmp

  mv config/paper-global.yml{.tmp,}
fi

exec sh -c "exec $executable"
