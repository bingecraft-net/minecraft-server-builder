#!/usr/bin/env zsh

set -e

if [ -f cidfile ] ; then
  podman start $(cat cidfile)
else
  IMAGE_TAG=bingecraft-net/velocity-server

  podman build \
    --build-arg VELOCITY_VERSION=3.4.0-SNAPSHOT \
    --build-arg VELOCITY_BUILD=496 \
    --tag $IMAGE_TAG \
    .

  podman run \
    --cidfile cidfile \
    --detach \
    --interactive \
    --publish 25565:25565 \
    -v $(readlink -f secrets):/home/minecraft/secrets \
    $IMAGE_TAG
fi

podman logs --follow $(cat cidfile)
